# Read `man 5 sway` for a complete reference.

### Variables
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term foot

# include before running any apps, as it sets up env for some apps to work correctly
include /etc/sway/config.d/*

### Output configuration
# You can get the names of your outputs by running: swaymsg -t get_outputs
output eDP-1 {
    mode 2880x1800@120.000Hz
    scale 2

    position 0 700
}

output "Dell Inc. DELL U2723QE 9Z41H34" {
    mode 3840x2160@59.997Hz
    scale 2

    position 1440 0
}

output "LG Electronics LG HDR 4K 0x0007BFBF" {
    mode 3840x2160@59.997Hz
    scale 2

    position 1440 0
}

output "*" {
    background ~/bg.png fill
}

### exec stuff

### Idle configuration
exec swayidle -w \
    timeout 120 'swaylock' \
    timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock'

# this is needed for correct dir order in telegram, use firefox and not chromium for links
exec systemctl --user import-environment XDG_DATA_DIRS

# background GUI services
exec swaync
exec /usr/libexec/geoclue-2.0/demos/agent
exec gammastep

# Tray apps
exec iwgtk -i
exec blueman-applet

# kill tailscale to avoid multiple instances
# tailscaled won't be killed, it's running as root
# add sleep to put icon after blueman (it takes 1-2 secs to appear)
# TODO: better icon ordering in waybar, will require patch
exec_always 'pkill tailscale; sleep 2.5; tailscale systray'

# exec_always is used because safeeyes can't handle config reload
# add some sleep, otherwise safeeyes won't detect tray
exec_always 'sleep 3; pkill safeeyes; /var/lib/flatpak/exports/bin/io.github.slgobinath.SafeEyes'

exec sway-kill-dialogs-on-unfocus.sh

# Autostart apps
exec firefox-esr
exec zed
# need gio launch for darkmode hack to work, gtk-launch does not work
# sh -c '... & sleep 0.5; [ "$(darkman get)" = "dark" ] && (darkman toggle; darkman toggle)'
exec gio launch /var/lib/flatpak/exports/share/applications/org.telegram.desktop.desktop
exec keepassxc
exec thunderbird

### Input configuration
# You can get the names of your inputs by rformat-window-separatorunning: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
input "type:keyboard" {
    xkb_layout us-mac-swapgrave,ru-mac-swapgrave
    xkb_options grp:caps_toggle
}

input "2:10:TPPS/2_Synaptics_TrackPoint" {
    accel_profile adaptive
    pointer_accel -0.65
    natural_scroll enabled
    scroll_factor 0.2
}

input "6127:24801:TrackPoint_Keyboard_II" {
    xkb_layout us-mac-swapgrave,ru-mac-swapgrave
    xkb_options grp:caps_toggle

    accel_profile adaptive
    pointer_accel -0.65
    natural_scroll enabled
    scroll_factor 0.2
}

input "1739:53160:SYNA802E:00_06CB:CFA8_Touchpad" {
    # disable by default, enable by keybind if needed
    # dwtp is annoying enough to disable by default
    events disabled

    dwt enabled
    dwtp enabled
    natural_scroll enabled
}

### Key bindings
#
# Basics:
#
    # Start a terminal
    bindsym --to-code $mod+Shift+Return exec $term

    # Kill focused window
    bindsym --to-code $mod+Shift+q kill

    # Start your launcher
    set $launcher_lock /tmp/sway_launcher_desktop.lock
    bindsym --to-code $mod+d input type:keyboard xkb_switch_layout 0; exec '\
        [ -f "$launcher_lock" ] && exit 1; \
        touch "$launcher_lock"; \
        trap "rm -f $launcher_lock" EXIT; \
        TERMINAL_COMMAND="$term -e " $term -a launcher sway-launcher-desktop.sh; \
        rm -f "$launcher_lock"; \
        '

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym --to-code $mod+Shift+c reload

    bindsym --to-code $mod+Shift+e exec swaynag -t warning -m 'Exit?' -B 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
    # Wrap focus when reaching the end of a workspace, don't switch to other output
    focus_wrapping workspace

    # Move your focus around
    bindsym --to-code $mod+$left focus left
    bindsym --to-code $mod+$down focus down
    bindsym --to-code $mod+$up focus up
    bindsym --to-code $mod+$right focus right

    # Move the focused window with the same, but add Shift
    bindsym --to-code $mod+Shift+$left move left
    bindsym --to-code $mod+Shift+$down move down
    bindsym --to-code $mod+Shift+$up move up
    bindsym --to-code $mod+Shift+$right move right
#
# Workspaces:
#
    # Switch to workspace
    bindsym --to-code $mod+1 workspace number 1
    bindsym --to-code $mod+2 workspace number 2
    bindsym --to-code $mod+3 workspace number 3
    bindsym --to-code $mod+4 workspace number 4
    bindsym --to-code $mod+5 workspace number 5
    bindsym --to-code $mod+6 workspace number 6
    bindsym --to-code $mod+7 workspace number 7
    bindsym --to-code $mod+8 workspace number 8
    bindsym --to-code $mod+9 workspace number 9
    bindsym --to-code $mod+0 workspace number 10

    # Move focused container to workspace
    bindsym --to-code $mod+Shift+1 move container to workspace number 1
    bindsym --to-code $mod+Shift+2 move container to workspace number 2
    bindsym --to-code $mod+Shift+3 move container to workspace number 3
    bindsym --to-code $mod+Shift+4 move container to workspace number 4
    bindsym --to-code $mod+Shift+5 move container to workspace number 5
    bindsym --to-code $mod+Shift+6 move container to workspace number 6
    bindsym --to-code $mod+Shift+7 move container to workspace number 7
    bindsym --to-code $mod+Shift+8 move container to workspace number 8
    bindsym --to-code $mod+Shift+9 move container to workspace number 9
    bindsym --to-code $mod+Shift+0 move container to workspace number 10

    bindsym --to-code $mod+Tab workspace next_on_output
    bindsym --to-code $mod+Shift+Tab workspace prev_on_output

    # focus next output
    bindsym --to-code $mod+Ctrl+Tab exec swaymsg focus output "$(swaymsg -t get_outputs | jq '[.[] | select(.active == true)] | .[(map(.focused) | index(true) + 1) % length].name')"

    # move workspace to next output
    bindsym --to-code $mod+Alt+Tab exec swaymsg move workspace to "$(swaymsg -t get_outputs | jq '[.[] | select(.active == true)] | .[(map(.focused) | index(true) + 1) % length].name')"

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym --to-code $mod+b splith
    bindsym --to-code $mod+v splitv

    # Switch the current container between different layout styles
    bindsym --to-code $mod+s layout stacking
    bindsym --to-code $mod+w layout tabbed
    bindsym --to-code $mod+e layout toggle split

    # Make the current focus fullscreen
    bindsym --to-code $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym --to-code $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym --to-code $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym --to-code $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym --to-code $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym --to-code $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    bindsym --to-code $left resize shrink width 50px
    bindsym --to-code $down resize grow height 50px
    bindsym --to-code $up resize shrink height 50px
    bindsym --to-code $right resize grow width 50px

    bindsym --to-code Shift+$left resize shrink width 10px
    bindsym --to-code Shift+$down resize grow height 10px
    bindsym --to-code Shift+$up resize shrink height 10px
    bindsym --to-code Shift+$right resize grow width 10px

    # Return to default mode
    bindsym --to-code Return mode "default"
    bindsym --to-code Escape mode "default"
}
bindsym --to-code $mod+r mode "resize"

#
# Utilities:
#
    bindsym --to-code Ctrl+Alt+q exec swaylock
    bindsym --to-code Ctrl+Alt+Space exec it.mijorus.smile

    bindsym --to-code $mod+Shift+n exec swaync-client -t -sw

    bindsym --to-code XF86SelectiveScreenshot input "1739:53160:SYNA802E:00_06CB:CFA8_Touchpad" events toggle enabled disabled

    # Special keys to adjust volume via PulseAudio
    bindsym --to-code --locked XF86AudioMute exec \
        'wpctl set-mute \@DEFAULT_SINK@ toggle; wob-volume.sh'
    bindsym --to-code --locked XF86AudioLowerVolume exec \
        'wpctl set-volume \@DEFAULT_SINK@ .05-; wob-volume.sh'
    bindsym --to-code --locked XF86AudioRaiseVolume exec \
        'wpctl set-volume \@DEFAULT_SINK@ .05+ --limit 1; wob-volume.sh'
    bindsym --to-code --locked Shift+XF86AudioLowerVolume exec \
        'wpctl set-volume \@DEFAULT_SINK@ .01-; wob-volume.sh'
    bindsym --to-code --locked Shift+XF86AudioRaiseVolume exec \
        'wpctl set-volume \@DEFAULT_SINK@ .01+ --limit 1; wob-volume.sh'

    bindsym --to-code --locked XF86AudioMicMute exec \
        'wpctl set-mute \@DEFAULT_SOURCE@ toggle; wob-volume.sh \@DEFAULT_SOURCE@'

    # Special keys to adjust brightness via brightnessctl
    bindsym --to-code --locked XF86MonBrightnessDown exec \
        'brightnessctl set -m 5%- | cut -d, -f4 | tr -d % > "$XDG_RUNTIME_DIR/wob.sock"'
    bindsym --to-code --locked XF86MonBrightnessUp exec \
        'brightnessctl set -m 5%+ | cut -d, -f4 | tr -d % > "$XDG_RUNTIME_DIR/wob.sock"'
    bindsym --to-code --locked Shift+XF86MonBrightnessDown exec \
        'brightnessctl set -m 1%- | cut -d, -f4 | tr -d % > "$XDG_RUNTIME_DIR/wob.sock"'
    bindsym --to-code --locked Shift+XF86MonBrightnessUp exec \
        'brightnessctl set -m 1%+ | cut -d, -f4 | tr -d % > "$XDG_RUNTIME_DIR/wob.sock"'

    # Screenshots
    bindsym --to-code Alt+Shift+3 exec grimshot copy screen
    bindsym --to-code Alt+Shift+4 exec grimshot copy area
    bindsym --to-code Alt+Shift+5 exec grimshot copy window

# Status Bar
bar swaybar_command waybar

# Styling

# `man 5 sway` for more information about these colorss
# changed only "indicator" from default
client.focused #4c7899 #285577 #ffffff #29728A #285577

# Titlebar style
font JetBrainsMonoNerdFont 9
titlebar_padding 4 1

for_window [all] border pixel 1
for_window [app_id="^foot$"] border pixel 2

# Per-app configs
for_window [app_id="^firefox-esr$"] move container to workspace 1, workspace 1
for_window [app_id="^org.chromium.Chromium$"] move container to workspace 1, workspace 1
for_window [app_id="^dev.zed.Zed$"] move container to workspace 2, workspace 2
for_window [app_id="^org.telegram.desktop"] title_format "Telegram", move container to workspace 3, workspace 3, layout tabbed
for_window [app_id="^(Slack|chrome-app.slack.com.*)$"] title_format "Slack", move container to workspace 3, workspace 3, layout tabbed
for_window [app_id="^thunderbird$"] move container to workspace 5, workspace 5

# Dialogs
for_window [window_type="dialog"] floating enable
for_window [window_role="dialog"] floating enable

for_window [title="^Picture-in-Picture$"] floating enable, sticky enable
for_window [app_id="^io.github.slgobinath.SafeEyes$"] floating enable, sticky enable
for_window [app_id="^it.mijorus.smile$"] floating enable, sticky enable, border pixel 0

for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10

# make all KeePassXC windows as dialogs, but additionally pin main window to top right
for_window [app_id="^org.keepassxc.KeePassXC$"] \
    floating enable, sticky enable
for_window [app_id="^org.keepassxc.KeePassXC$" title="^KeePass.+ KeePassXC$"] \
    resize set 800 634, move position 640 0

for_window [app_id="^org.twosheds.iwgtk$"] floating enable, sticky enable, resize set 38 ppt 634, move position 62 ppt 0
for_window [app_id="^iwgtk$"] floating enable, sticky enable   # pasword dialog
for_window [app_id="^blueman-manager$"] floating enable, sticky enable, resize set 38 ppt 634, move position 62 ppt 0
for_window [app_id="^org.pulseaudio.pavucontrol$"] floating enable, sticky enable, resize set 50 ppt 634, move position 50 ppt 0
