// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "features": {
    "edit_prediction_provider": "copilot",
    "copilot": true
  },
  "buffer_font_size": null,
  "edit_predictions": {
    "disabled_globs": [
      ".env",
      "ARTICLE.md"
    ]
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "format_on_save": "on",
  "base_keymap": "JetBrains",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "light": "Zed Legacy: Solarized Light",
    "dark": "Zed Legacy: Solarized Dark"
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "HCL": {
      "tab_size": 2
    },
    "C": {
      "format_on_save": "off",
      "hard_tabs": false,
      "tab_size": 2
    },
    "C++": {
      "format_on_save": "off",
      "hard_tabs": false,
      "tab_size": 2
    },
    "Rust": {
      "format_on_save": "off"
    },
    "JSON": {
      "format_on_save": "off"
    },
    "YAML": {
      "format_on_save": "off"
    }
  },
  "terminal": {
    "copy_on_select": true
  },
  "project_panel": {
    "auto_fold_dirs": true
  },
  "preview_tabs": {
    "enabled": false
  },
  "ssh_connections": [
    {
      "host": "yotsugi",
      "projects": [
        {
          "paths": [
            "~/hw"
          ]
        }
      ]
    },
    {
      "host": "tsukihi",
      "projects": [
        {
          "paths": [
            "~/hw"
          ]
        }
      ]
    }
  ]
}
