// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "format_on_save": "on",
  "base_keymap": "JetBrains",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Solarized Light",
    "dark": "Solarized Dark"
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "HCL": {
      "tab_size": 2
    },
    "YAML": {
      "format_on_save": "off"
    }
  },
  "terminal": {
    "copy_on_select": true
  },
  "project_panel": {
    "auto_fold_dirs": true
  },
  "preview_tabs": {
    "enabled": false
  }
}
